<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginViewController">
   <children>
      <AnchorPane layoutY="-100.0" prefHeight="380.0" prefWidth="380.0">
         <children>
            <TextField fx:id="Usernameinput" layoutX="122.0" layoutY="142.0" promptText="Username" />
            <Button layoutX="179.0" layoutY="226.0" mnemonicParsing="false" onAction="#login" text="Login" />
            <Text fx:id="loginerrato" fill="RED" layoutX="76.0" layoutY="222.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LOGIN ERRATO! (Username o Password errati)" />
            <PasswordField fx:id="passwordinput" layoutX="123.0" layoutY="175.0" promptText="Password" />
            <Button layoutX="158.0" layoutY="313.0" mnemonicParsing="false" onAction="#registrazione" text="Registrazione" />
            <Text layoutX="100.0" layoutY="301.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Non sei ancora registrato, Registrati!" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
